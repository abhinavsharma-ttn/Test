pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello, World!'
                sh 'git clone git@github.com:abhinavsharma-ttn/Assingment ${WORKSPACE}/Assingment'
                
                // Ensure script has execute permissions
                sh 'chmod +x ${WORKSPACE}/Test/abhi.sh'
                
                // Run the script
                sh '${WORKSPACE}/Test/abhi.sh'
            }
        }
    }
}
