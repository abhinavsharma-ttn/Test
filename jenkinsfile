pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello, World!'
                
                // Clone the repository inside the workspace
                sh 'git clone git@github.com:abhinavsharma-ttn/Assingment.git ${WORKSPACE}/Assingment'
                
                // Ensure the script has execute permissions
                sh 'chmod +x ${WORKSPACE}/Assingment/abhi.sh'
                
                // Run the script
                sh '${WORKSPACE}/Assingment/abhi.sh'
            }
        }
    }
}
